# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                    controllers.Application.index

GET         /home                controllers.Application.home
GET         /contacts            controllers.Application.contacts
GET         /editcontact/:id     controllers.Application.editcontact(id : Long)

GET         /login               controllers.Login.renderLogin
#POST        /login               controllers.Login.login
POST        /loginjson           controllers.Login.loginJson

#TODO make it post
POST         /logout              controllers.Login.logout

GET         /register            controllers.Register.renderRegister
#POST        /register            controllers.Register.register
POST        /registerjson        controllers.Register.registerJson

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file        controllers.Assets.at(path="/public", file)

